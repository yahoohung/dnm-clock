{
  "name": "dnm-broadcast-timer",
  "version": "1.0.0",
  "description": "A high-precision, drift-free broadcast timer engine designed to maintain atomic accuracy under extreme main-thread rendering loads.",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/dnm-broadcast-timer.umd.js",
  "module": "./dist/dnm-broadcast-timer.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dnm-broadcast-timer.es.js",
      "require": "./dist/dnm-broadcast-timer.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yahoohung/dnm-clock.git"
  },
  "keywords": [
    "react",
    "timer",
    "broadcast",
    "web-worker",
    "offscreen-canvas",
    "hook",
    "drift-free"
  ],
  "author": "Yahoo Hung",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --config vite.lib.config.ts",
    "preview": "vite preview",
    "test": "vitest",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^1.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}